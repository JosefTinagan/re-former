<%= form_for @user do |f| %>
	<%= f.label(:username, "Your username here")%>
	<%= f.text_field :username %><br />

	<%= f.label :email %>
	<%= f.text_field :email, :value => "example@example.com" %><br />

	<%= f.label :password %>
	<%= f.password_field :password %><br />
	<%= f.submit "Submit" %>
<% end %>